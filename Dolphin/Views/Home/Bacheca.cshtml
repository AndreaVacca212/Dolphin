@model List<Utility.Entity>
@using Dolphin.Controllers
@using Dolphin.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dolphin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="stylesheet" type="text/css" href="~/css/animate.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/line-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/css/line-awesome-font-awesome.min.css">
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/responsive.css">
</head>

<body>

    <div class="wrapper">
        <header id="myHeader" style=" position: sticky;" class="sticky">
            <div class="container">
                <div class="header-data">
                    <div class="logo">
                        <a href="index.html" title=""><img src="~/img/Logo Progetto 5.jpg" style="border-radius: 50%;"alt=""></a>
                    </div><!--logo end-->
                    <div class="search-bar">
                        <form name="input" action="/Home/UserListLike/valore" method="get">
                            <input id="input" type="text" name="valore" placeholder="Cerca su Dolphin">
                            <button type="submit"><i class="la la-search"></i></button>
                        </form>
                    </div><!--search-bar end-->
                    <nav>
                        <ul>
                            <li>
                                <a href="/Home/Bacheca/" title="">
                                    <span><img src="~/img/icon1.png" alt=""></span>
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="/Home/UserList/" title="">
                                    <span><img src="~/img/icon4.png" alt=""></span>
                                    Lista Utenti
                                </a>

                            </li>
                            <li>
                                <a href="#" title="" class="not-box-open">
                                    <span><img src="~/img/icon7.png" alt=""></span>
                                    Notifiche
                                    @if (DAORichiestaAmicizia.GetInstance().ReadRichiestaAmicizia(HomeController.utenteLoggato.Id).Count > 0)
                                    {
                                        <span class="badge badge-light">@(DAORichiestaAmicizia.GetInstance().ReadRichiestaAmicizia(HomeController.utenteLoggato.Id).Count)</span>

                                    }
                                </a>
                                
                                <div class="notification-box noti" id="notification">
                                    @foreach (var e in DAORichiestaAmicizia.GetInstance().ReadRichiestaAmicizia(HomeController.utenteLoggato.Id))
                                    {
                                        <div class="nott-list">
                                            <div class="notfication-details">
                                                <div class="noty-user-img">
                                                    <img src="@(((RichiestaAmicizia)e).FotoProfilo)" alt="">
                                                </div>
                                                <div class="notification-info">
                                                    <h3><a title="">@(((RichiestaAmicizia)e).Nome) @(((RichiestaAmicizia)e).Cognome) </a>Ti ha inviato una richiesta di amicizia</h3>
                                                </div>
                                                <div>
                                                    <a href="/Home/AccettaRichiestaAmicizia/?idRichiesta=@(((RichiestaAmicizia)e).Id)&idRichiedente=@(((RichiestaAmicizia)e).IdRichiedente)&idAccettante=@(HomeController.utenteLoggato.Id)" title="" class="btn btn-success">Accetta</a>
                                                    <a href="/Home/RifiutaRichiestaAmicizia/?idRichiesta=@(((RichiestaAmicizia)e).Id)" title="" class="btn btn-danger" style="background-color:red;">Rifiuta</a><!--vedere come cambiare colore in rosso-->
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                
                            </li>
                        </ul>
                    </nav><!--nav end-->
                    <div class="menu-btn">
                        <a href="#" title=""><i class="fa fa-bars"></i></a>
                    </div><!--menu-btn end-->
                    <div class="user-account">
                        <div class="user-info">
                            <img src="@HomeController.utenteLoggato.FotoProfilo" style="width: 30px; height:30px;" alt="">
                            <a href="#" title="">@HomeController.utenteLoggato.Nome</a>
                            <i class="la la-sort-down"></i>
                        </div>
                        <div class="user-account-settingss" id="users" style="z-index:-1;">
                            <ul class="us-links">
                                <li><a href="/User/ModificaProfilo2/@(HomeController.utenteLoggato.Id)" title="">Impostazioni Account</a></li>
                            </ul>
                            <h3 class="tc"><a href="/Home/Logout/" title="">Logout</a></h3>
                        </div><!--user-account-settingss end-->
                    </div>
                </div><!--header-data end-->
            </div>
        </header><!--header end-->

        <main class="content">
            <div class="main-section">
                <div class="container">
                    <div class="main-section-data">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                                <div class="main-left-sidebar no-margin" id="imageID">
                                    <div class="widget widget-about">
                                        <img src="~/img/Logo Progetto 5.jpg" alt="">
                                        <h3>Dolphin</h3>

                                    </div><!--widget-about end-->
                                    <div class="tags-sec full-width">
                                        <ul>
                                            <li><a href="#" title="">Help Center</a></li>
                                            <li><a href="#" title="">About</a></li>
                                            <li><a href="#" title="">Privacy Policy</a></li>
                                            <li><a href="#" title="">Community Guidelines</a></li>
                                            <li><a href="#" title="">Cookies Policy</a></li>
                                            <li><a href="#" title="">Career</a></li>
                                            <li><a href="#" title="">Language</a></li>
                                            <li><a href="#" title="">Tizio Policy</a></li>
                                        </ul>
                                        <div class="cp-sec">
                                            <img src="~/img/Logo Progetto 5.jpg" style="width:10%;" alt="">Dolphin
                                            <p><img src="~/img/cp.png" alt="">Copyright 2022</p>
                                        </div>
                                    </div><!--tags-sec end-->
                                </div><!--main-left-sidebar end-->
                            </div>
                            <div class="col-lg-6 col-md-8 no-pd">
                                <div class="main-ws-sec">
                                    <div class="post-topbar">
                                        <div class="user-picy">
                                            <img src="@HomeController.utenteLoggato.FotoProfilo" style="padding-right:4px;" alt="">
                                        </div>
                                        <div class="comment_box">
                                            <form action="/Home/InserisciPost/">
                                                <input type="hidden" name="idutente" value="@HomeController.utenteLoggato.Id" />
                                                <input type="hidden" name="data_ora" value="2022-10-06 10:57:00" />
                                                <input type="hidden" name="mipiace" value="0" />
                                                <textarea class="form-control input-lg no-border" rows="2" name="contenutopost" style="width:70%; display:initial" placeholder="A cosa stai pensando? "></textarea>
                                                <button type="submit">INVIA</input>
                                            </form>
                                        </div>
                                    </div><!--post-topbar end-->
                                    <div class="posts-section">
                                        <div class="posty">

                                            @foreach (var p in Model)
                                            {
                                                <div class="post-bar">
                                                    <div class="post_topbar">
                                                        <div class="usy-dt">
                                                            <img src="@(((Bacheca)p).FotoUtente)" alt="" style="width:50px; height:50px;">
                                                            <div class="usy-name">
                                                                <a href="/User/ViewProfile/@(((Bacheca)p).IdUtente)"><h3>@(((Bacheca)p).NomeUtente) @(((Bacheca)p).CognomeUtente)</h3> </a>
                                                                <span><img src="~/img/clock.png" alt="">@(((Bacheca)p).Data_Ora)</span>
                                                            </div>
                                                        </div>
                                                        @if (HomeController.utenteLoggato.Ruolo == "admin")
                                                        {
                                                            <div class="ed-opts">
                                                                <a href="#" title="" class="ed-opts-open"><i class="la la-ellipsis-v"></i></a>
                                                                <ul class="ed-options">
                                                                    <li><a href="/Home/EliminaPost/@(((Bacheca)p).IdPost)" onclick="return confirm('Sei sicuro di voler eliminare il post?');" title="">Elimina Post</a></li>
                                                                </ul>
                                                            </div>
                                                        }

                                                    </div>
                                                    <div class="job_descp">
                                                        <p>@(((Bacheca)p).ContenutoPost)</p>
                                                    </div>
                                                    <div class="job-status-bar">

                                                        <ul class="like-com">
                                                            @{ bool ris = false;}
                                                            @foreach (var m in DAOPost.GetInstance().ReadLikes(((Bacheca)p).IdPost))
                                                            {
                                                                if ((((MiPiacePost)m).IdUtente) == HomeController.utenteLoggato.Id)
                                                                {
                                                                    ris = true;
                                                                    break;
                                                                }
                                                                else
                                                                {
                                                                    ris = false;
                                                                }



                                                            }

                                                            @if (ris == true)
                                                            {
                                                                <li >
                                                                    <a href="/Home/EliminaLike/@(((Bacheca)p).IdPost)" style="color:red;"><i class="fas fa-heart" style="color:red;"></i> Ti piace @(DAOPost.GetInstance().ReadLikes(((Bacheca)p).IdPost).Count) </a>

                                                                </li>
                                                            }
                                                            else
                                                            {
                                                                <li>
                                                                    <a href="/Home/NuovoLike/@(((Bacheca)p).IdPost)"><i class="fas fa-heart"></i> Mi piace @(DAOPost.GetInstance().ReadLikes(((Bacheca)p).IdPost).Count) </a>

                                                                </li>
                                                            }

                                                            <li><a href="#"><i class="fas fa-comment-alt"></i> Commenti @(DAOCommento.GetInstance().ReadCommenti((((Bacheca)p).IdPost)).Count)</a></li>
                                                        </ul>
                                                    </div>
                                                    <div class="comment-section">
                                                        <div class="comment-sec">
                                                            <ul>
                                                                <li>
                                                                    @foreach (var g in DAOCommento.GetInstance().ReadCommenti((((Bacheca)p).IdPost)))
                                                                    {
                                                                        <div class="comment-list">
                                                                            <div class="bg-img">
                                                                                <img src="@(((Commento)g).FotoProfilo)" style="width:50px; height:50px;" alt="">
                                                                            </div>
                                                                            <div class="comment">
                                                                                <h3>@(((Commento)g).Nome) @(((Commento)g).Cognome) </h3>
                                                                                <span><img src="~/img/clock.png" alt="">@(((Commento)g).Data_Ora) </span>
                                                                                <p>@(((Commento)g).ContenutoCommento)</p>
                                                                            </div>
                                                                        </div><!--comment-list end-->
                                                                    }
                                                                </li>
                                                            </ul>

                                                        </div><!--comment-sec end-->
                                                        <div class="post-comment">
                                                            <div class="cm_img">
                                                                <img src="@(HomeController.utenteLoggato.FotoProfilo)" alt="">
                                                            </div>
                                                            <div class="comment_box">
                                                                <form action="/User/InserisciCommento/">
                                                                    <input type="hidden" name="idpost" value="@(((Bacheca)p).IdPost)" />
                                                                    <input type="hidden" name="idutente" value="@(HomeController.utenteLoggato.Id)" />
                                                                    <input type="hidden" name="data_ora" value="2022-10-06 10:57:00" />
                                                                    <input type="text" name="contenutocommento" placeholder="Scrivi un commento">
                                                                    <button type="submit">Invia</button>
                                                                </form>
                                                            </div>
                                                        </div><!--post-comment end-->
                                                    </div><!--comment-section end-->
                                                </div><!--post-bar end-->

                                                <!--FINE FOREACH-->
                                            }
                                        </div><!--posty end-->

                                    </div><!--posts-section end-->
                                </div><!--main-ws-sec end-->
                            </div>
                            <div class="col-lg-3 pd-right-none no-pd">
                                <div class="right-sidebar">
                                    <div class="user-data full-width">
                                        <div class="user-profile">
                                            <div class="username-dt">
                                                <div class="usr-pic">
                                                    <img src="@HomeController.utenteLoggato.FotoProfilo" style="width:100px; heigt:100px;" alt="">
                                                </div>
                                            </div><!--username-dt end-->
                                            <div class="user-specs">
                                                <h3>@HomeController.utenteLoggato.Nome @HomeController.utenteLoggato.Cognome</h3>
                                                <span>@HomeController.utenteLoggato.Email</span>
                                            </div>
                                        </div><!--user-profile end-->
                                        <ul class="user-fw-status">
                                            <li>
                                                <h4>Amici</h4>
                                                <span>@(DAOAmicizia.GetInstance().ReadAmicizia(HomeController.utenteLoggato.Id).Count)</span>
                                            </li>
                                            <li>
                                                <a href="/User/UserAccount/" title="">Vedi Profilo</a>
                                            </li>
                                        </ul>
                                    </div><!--user-data end-->


                                </div>
                            </div>
                        </div><!-- main-section-data end-->
                    </div>
                </div>
        </main>



    </div><!--theme-layout end-->

    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/popper.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.mCustomScrollbar.js"></script>
    <script type="text/javascript" src="~/lib/slick/slick.min.js"></script>
    <script type="text/javascript" src="~/js/scrollbar.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>

    <script>window.onscroll = function () { myFunction() };

        var header = document.getElementById("myHeader");
        var image = document.getElementById("imageID");
        var sticky = header.offsetTop;

        function myFunction() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
                image.classList.add("sticky2");
            } else {
                header.classList.remove("sticky");
                image.classList.remove("sticky2");
            }
        }</script>
</body>
</html>
