<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dolphin</title>
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
</head>
<body class="login">
    <!-- header starts here -->
    <div id="facebook-Bar">
        <div id="facebook-Frame">
            <div id="logo"> <a href="#">Dolphin</a> </div>
            <div id="header-main-right">
                <div id="header-main-right-nav">
                    <form method="post" action="/Home/Valida" id="login_form" name="login_form">
                        <table border="0" style="border:none">
                            <tr>
                                <td><input type="text" tabindex="1" id="email" placeholder="Email or Phone" name="email" class="inputtext radius1" value=""></td>
                                <td><input type="password" tabindex="2" id="pass" placeholder="Password" name="pass" class="inputtext radius1"></td>
                                <td><input type="submit" class="fbbutton" name="login" value="Login" /></td>
                            </tr>
                            <tr>
                                <td>
                                    <label>
                                        <input id="persist_box" type="checkbox" name="persistent" value="1" checked="1" />
                                        <span style="color:#ccc;">Keep me logged in</span>
                                    </label>
                                </td>
                                <td><label><a href="" style="color:#ccc; text-decoration:none">forgot your password?</a></label></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- header ends here -->
    <div class="loginbox radius">
        <h2 style="color:#141823; text-align:center;">Benvenuto su Dolphin</h2>
        <div class="loginboxinner radius">
            <div class="loginheader">
                <h4 class="title">Connettiti con gli amici.</h4>
            </div>
            <!--loginheader-->
            <div class="loginform">
                <form id="login" action="/Home/Salva/" method="post">
                    <p>
                        <input type="text" id="nome" name="nome" placeholder="Nome" value="" class="radius mini" />
                        <input type="text" id="cognome" name="cognome" placeholder="Cognome" value="" class="radius mini" />
                    </p>
                    <p>
                        <input type="tel" id="telefono" name="telefono" placeholder="Numero di Cellulare" required>
                    </p>
                    <p>
                        <input type="text" id="email" name="email" placeholder="Email" value="" class="radius" />
                    </p>
                    <p>
                        <input type="password" id="pass" name="pass" placeholder="Password" class="radius" />
                    </p>
                    <p>
                        <input type="password" id="confermapass" name="confermapass" placeholder="Conferma Password" class="radius" />
                    </p>
                     <p>
                        <input type="text" id="indirizzo" name="indirizzo" placeholder="Indirizzo" value="" class="radius" />
                    </p>
                     <p>
                        <input type="text" id="codicefiscale" name="codice_fiscale" placeholder="Codice Fiscale" value="" class="radius" />
                    </p>
                    <p>
                        <button class="radius title" name="signup">Registrati Dolphin</button>
                    </p>
                </form>
            </div>
            <!--loginform-->
        </div>
        <!--loginboxinner-->
    </div>
    <!--loginbox-->

</body>
</html>